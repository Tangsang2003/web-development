<%- include("partials/header.ejs") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input
      class="form-control"
      id="postTitle"
      type="text"
      name="postTitle"
      required
    />
  </div>
  <div class="form-group">
    <label for="postContent">Post</label>

    <textarea
      class="form-control"
      id="postContent"
      rows="4"
      name="postContent"
      required
    ></textarea>
  </div>
  <button class="btn btn-outline-dark mt-3" type="submit">Publish</button>
</form>
<%- include("partials/footer.ejs") -%>
